<%- include('../layout/metatag') %>

    <%- include('../partials/user-header') %>




<section>
    <link rel="stylesheet" href="/public/stylesheet/wishlist.css">
    <% if (countInWishlist !== 0) { %>
            <div class="container mb-4">

                <div class="row justify-content-center">
           
                    <!-- Wishlist-->
                    <div class="col-lg-8 pb-5"> 
                          <h2 class="text-center  mt-5">Wishlist</h2>
                          <% wishlistData.forEach((product)=> { %>
                        <!-- Item-->
                        <div class="cart-item d-md-flex justify-content-between mt-5"><span  onclick="removewishlist('<%= product._id %>','<%= product.productDetail._id %>')" class="remove-item"><i class="fa fa-times"></i></span>
                            <div class="px-3 my-3">
                                <a class="cart-item-product" href="#">
                                    <div class="cart-item-product-thumb"><img src="/products-images/<%= product.productDetail._id %>.jpg" alt=""></div>
                                    <div class="cart-item-product-info">
                                        <h4 class="cart-item-product-title"> <%= product.productDetail.product_name %></h4>
                                        <div class="text-lg text-body font-weight-medium pb-1 fw-bolder">$<%=
                                            product.productDetail.price%>.00</div><span class="mt-2">Availability: <span class="text-success font-weight-medium">In Stock</span></span>
                                  
                               
                                  <button class="btn btn-dark  h-50 mt-3 "  onclick="addtocart('<%= product._id %>')"><i class="fa fa-shopping-cart text-white "></i></button>
                            </div>
                                </a>
                            </div>
                           
                              
  
                            
                       
                        </div>
                        <!-- Item-->
                     
                        <!-- Item-->
                 <% }) %>
                    
                    </div>
                 
                </div>
            </div>


        </section>


        <% }else { %>
  
            <%- include('../partials/emptywishlist') %>
          
            <% } %>

        <%- include('../partials/footer') %>
            <script src="/public/javascript/change.js"></script>
            <script src="/public/javascript/cart.js"></script>
