
<%- include('../layout/metatag') %> 
<link rel="stylesheet" href="/public/stylesheet/otp.css">
<div id="app">
    <div class="container height-100 d-flex justify-content-center align-items-center">
        <form action="/otpid" method="post">
        <div class="position-relative">
            <div class="card p-2 text-center">
                <h6>Please enter the one time password <br> </h6>
                <% if (locals.userData) { %>
                <div> <span> sent to</span> <small><%= userData.email %></small> </div>
                <% } %>   
                <div class="d-flex flex-row mt-4">
                   <% if (locals.userData) { %>
                    <input type="hidden" name="name" id="name" class="form-control" value="<%= userData.name %> ">
                    <input type="hidden" name="email" id="email" class="form-control" value="<%= userData.email %> ">
                    <input type="hidden" name="phone" id="phone" class="form-control" value="<%= userData.phone %> ">
                    <input type="hidden" name="password" id="password" class="form-control" value="<%= userData.password %> ">
                   <% } %>   
                  <input type="text" name="otp" id="otp" class="form-control" />
               </div>
                <div class="mt-4"> <button class="btn btn-dark px-4 validate">Validate</button> </div>
                <% if(locals.invalid){ %>
                <div class="mt-3 content d-flex justify-content-center align-items-center"> <span class="text-danger"><%=invalid%></span></div>
                <% } %>
                        <!-- code</span> <a href="#" class="text-decoration-none ms-3">Resend(1/3)</a> </div> -->
            </div>
        </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
<script src="/public/javascript/otp.js"></script>