<%- include('../partials/admin-header') %>

<%- include('../partials/admin-sidebar')%>


<div class="col py-3 mt-5">

    <div class="d-flex align-items-center justify-content-center">
      <h1 class="text-decoration-underline">User Details</h1>
    </div>
    <table class="table mt-5" id="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">name</th>
          <th scope="col">email</th>
          <th scope="col">Controlls</th>

        </tr>
      </thead>
      <tbody>
        <% count=1 %>
        <% users.forEach((user)=>{ %>
            <tr>
              <td>
                <%= count %>
              </td>
              <td>
                <%=user.username %>
              </td>
              <td>
                <%=user.email %>
       
              </td>
          
              <td>
                <% if(user.isBlocked===false) { %>
                  <a href="/admin/blockUser/<%=user._id%>" class="btn btn-danger">Block</a>
                  <% }else{ %>
                    <a href="/admin/UnblockUser/<%=user._id%>" class="btn btn-success">Unblock</a>
                    <%}%>
              </td>
            </tr>
            <% count++ %>
            <% }) %>
       


      </tbody>
    </table>

  </div>



<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

<script>
  $(document).ready(function () {
    $('#table').DataTable();
  });
</script>